":[{"inlineContent":[{"text":"Initialise SpaceKitContextFactory by passing in the URL:","type":"text"}],"type":"paragraph"},{"type":"codeListing","syntax":"swift","code":["let context = try await SpaceKitContextFactory(venue: venue, configurationFileURL: configuration).make()"]}]}]},{"anchor":"Example-keys","level":3,"text":"Example keys","type":"heading"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Here are some examples of keys that can be used in SpaceKit configuration JSON:"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"codeVoice","code":"enableTeleport"},{"type":"text","text":" (Boolean) If true, tapping on the map will simulate a user located at that position. Useful for testing routes and navigation."}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"code":"enableLevelSwitcher","type":"codeVoice"},{"type":"text","text":" (Boolean) If true, level switcher will be added by default to the map UI."}],"type":"paragraph"}]}]}]}],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/spacekit\/configuration"]},{"traits":[{"interfaceLanguage":"occ"}],"paths":["\/documentation\/spacekit\/configuration"]}],"identifier":{"url":"doc:\/\/DentReality.SpaceKit\/documentation\/SpaceKit\/Configuration","interfaceLanguage":"swift"},"sections":[],"references":{"doc://DentReality.SpaceKit/documentation/SpaceKit":{"role":"collection","images":[{"type":"icon","identifier":"hyper-wireframe-icon.png"}],"abstract":[{"text":"Indoor location that actually works!","type":"text"}],"kind":"symbol","identifier":"doc:\/\/DentReality.SpaceKit\/documentation\/SpaceKit","url":"\/documentation\/spacekit","type":"topic","title":"SpaceKit"},"hyper-wireframe-icon.png":{"type":"image","alt":"The Hyper logo","identifier":"hyper-wireframe-icon.png","variants":[{"url":"\/images\/DentReality.SpaceKit\/hyper-wireframe-icon.png","traits":["1x","light"]}]}},"variantOverrides":[{"traits":[{"interfaceLanguage":"occ"}],"patch":[{"op